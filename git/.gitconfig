[user]
	name = Your Name
	email = your.email@example.com
	# 1Password SSH署名を使用する場合は、以下のコメントを外して公開鍵を設定:
	# signingkey = ssh-ed25519 AAAA...

[core]
	editor = vim                         # デフォルトエディタ
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol  # 空白文字の扱い
	excludesfile = ~/.gitignore_global   # グローバルな無視設定
	autocrlf = input                     # 改行コードの自動変換（LF固定）
	pager = less -R                      # ページャー設定
	filemode = false                     # ファイルモードの変更を無視
	ignorecase = false                   # ファイル名の大文字小文字を区別
	quotepath = false                    # 日本語ファイル名を正しく表示
	# WSLで1PasswordのSSHを使用する場合は、以下のコメントを外す:
	# sshCommand = ssh.exe

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto
	interactive = auto
	grep = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[alias]
	# 基本的なショートカット
	st = status -sb           # ステータスを簡潔に表示
	ci = commit              # コミット
	co = checkout            # チェックアウト
	br = branch              # ブランチ
	df = diff                # 差分表示
	dfs = diff --staged      # ステージング済みの差分
	
	# ログ表示
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit  # グラフ付きログ
	ll = log --pretty=format:'%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]' --decorate --numstat  # ファイル変更統計付き
	ls = log --pretty=format:'%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]' --decorate           # シンプルなログ
	lds = log --pretty=format:'%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --decorate --date=short  # 日付付き
	
	# ブランチ操作
	cob = checkout -b        # 新規ブランチを作成してチェックアウト
	del = branch -D          # ブランチを強制削除
	bra = branch -ra         # リモート含む全ブランチ表示
	
	# スタッシュ操作
	sl = stash list          # スタッシュ一覧
	sa = stash apply         # スタッシュを適用
	ss = stash save          # 変更をスタッシュ
	sp = stash pop           # スタッシュを適用して削除
	
	# 詳細情報表示
	tags = tag -l            # タグ一覧
	branches = branch -a     # 全ブランチ一覧
	remotes = remote -v      # リモート一覧
	
	# 取り消し操作
	undo = reset --soft HEAD~1      # 直前のコミットを取り消し（変更は保持）
	unstage = reset HEAD --         # ステージングを取り消し
	amend = commit --amend --no-edit  # 直前のコミットに追加
	
	# コミット検索
	find = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"
	
	# ソースコード検索
	fc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"
	
	# コントリビューター表示
	contributors = shortlog --summary --numbered
	
	# マージ済みブランチをクリーンアップ
	cleanup = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[push]
	default = current
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

[diff]
	algorithm = histogram
	colorMoved = default

[merge]
	conflictstyle = diff3
	tool = vimdiff

[rerere]
	enabled = true

[init]
	defaultBranch = main

[help]
	autocorrect = 1

[commit]
	# Enable GPG signing for commits (uncomment if using)
	# gpgsign = true

[gpg]
	# For 1Password SSH signing, uncomment:
	# format = ssh

[gpg "ssh"]
	# For 1Password on WSL, set the path to op-ssh-sign-wsl:
	# program = "/mnt/c/Users/YOUR_USERNAME/AppData/Local/1Password/app/8/op-ssh-sign-wsl"

[credential]
	helper = cache --timeout=3600

# GitHub CLI credential helper (if using gh CLI)
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true